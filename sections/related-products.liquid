{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-related-products.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{% render 'section-style' 
  section_id:section.id, 
  padding_top:section.settings.padding_top,
  padding_bottom:section.settings.padding_bottom
%}

<div class="related-products-section section-container color-{{ section.settings.color_scheme }} gradient no-js-hidden">
  <product-recommendations
    class="related-products section-wrapper page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
      <ul
        class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
        role="list"
      >
        {% for recommendation in recommendations.products %}
          <li class="grid__item">
            {%- unless recommendation.tags contains 'HIDDEN' -%}
            {% render 'card-product',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id,
              show_sku: settings.show_sku,
              show_colors: settings.show_colors,
            %}
          {%- endunless -%}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {% render 'mask-arch' %}
  {%- endif -%}
</div>
{%- if settings.favorite_products and customer -%}
  <script src="{{ 'upango-favoritos.js' | asset_url }}" defer></script>
{%- endif -%}

<script>
// Function to initialize color button functionality
function initializeColorButtons() {
  const containers = document.querySelectorAll('.card-wrapper');
  containers.forEach((card) => {
    const colorBtns = card.querySelectorAll('.variant-image-btn');
    const image = card.querySelector('img');
    colorBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Remove the 'variant-image-selected' class from all buttons
        colorBtns.forEach((btn) => btn.classList.remove('variant-image-selected'));

        // Add the 'variant-image-selected' class to the clicked button
        btn.classList.add('variant-image-selected');

        // Change the image and SKU
        const newSrc = btn.getAttribute('image-data');
        image.src = newSrc;
        const newSku = btn.getAttribute('data-sku');
        if (newSku) {
          // Find the SKU element in the current card container
          const skuContainer = card.querySelector('.sku-value');
          // Update the SKU value
          skuContainer.textContent = newSku;
        }
      });
    });
  });
}

// Initialize color buttons on page load
document.addEventListener('DOMContentLoaded', function () {
  initializeColorButtons();

  // Re-initialize when new related products are loaded dynamically
  const productRecommendations = document.querySelector('product-recommendations');
  if (productRecommendations) {
    new MutationObserver(() => {
      initializeColorButtons();
    }).observe(productRecommendations, { childList: true, subtree: true });
  }
});
</script>


