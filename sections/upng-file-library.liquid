{{ 'upng-file-library.css' | asset_url | stylesheet_tag }}

<div class="page-width section-{{ section.id }}-padding">
  <h3 class="text-bold">{{ 'upango.document-library.title' | t }}</h3>
  <div class="flex-container">
    <div class="section-button">
      <button class="button button--primary">{{ 'upango.document-library.general_section' | t }}</button>
    </div>
    <div class="section-button">
      <button id="backButton" class ="button button--secondary">{{ 'upango.document-library.back' | t }}</button>
    </div>
  </div>
  <div class="flex-container flex-column" id="files-container">
    <div class="file-container"></div>
  </div>
</div>

<script src="{{ 'upng-file-library.js' |  asset_url }}" defer="defer"></script>

{% schema %}
  {
    "name": "File Library",
    "class": "section",
    "settings": [],
    "presets": [
      {
        "name": "File Library"
      }
    ]
  }
{% endschema %}